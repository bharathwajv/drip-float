{
  "manifest_version": 3,
  "name": "DripYou Float Overlay",
  "version": "0.1.0",
  "description": "Draggable floating overlay with basic layout, history stub, and options toggle.",
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/panel.js"
      ],
      "css": [
        "content/panel.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "pages/dashboard.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "DripYou Float Overlay",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/dashboard.html",
        "pages/history.html",
        "content/panel.css",
        "popup/popup.html",
        "config/sites.json"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}